{
  "manifest_version": 3,
  "name": "YAPE",
  "description": "YAPE - Yet Another Proxy Extension",
  "version": "0.1",
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "ProxyZ"
  },
  "permissions": [
    "storage",
    "proxy",
    "webRequest",
    "webRequestAuthProvider"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}